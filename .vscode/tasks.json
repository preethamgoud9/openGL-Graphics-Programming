{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
    "-I/opt/homebrew/include",
    "-L/opt/homebrew/lib",
    "-lglfw",
    "-framework", "Cocoa",
    "-framework", "OpenGL",
    "-framework", "IOKit",
    "-g",
    "${file}",
    "-o",
